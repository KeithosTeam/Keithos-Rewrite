{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": ["testing.js"],
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "linebreak-style": [ "off", "windows" ],
        "quotes": [ "warn", "single" ],
        "semi": [ "warn", "always" ],
        "no-unused-vars": [ "off", { "args": "all" } ],
        "no-unsafe-negation": ["off"]
    },
    "globals": {
        "__basedir": "off"
    }

}
