{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "linebreak-style": [ "off", "windows" ],
        "quotes": [ "warn", "single" ],
        "semi": [ "warn", "never" ]
    },
    "globals": {
        "__basedir": "false"
    }

}
